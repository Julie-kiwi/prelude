<div class="suggestions-body">
  <div class="cont-link">
    <%= link_to root_path do %>
      <%= image_tag 'left-arrow_white.png', class: "left-arrow" %>
    <% end %>
    <h1 class="title_sign_up">Suggestions</h1>
  </div>
  <% if @games[0].nil? %>
    <div class="no-game">
      <p>Désolé, aucun jeu ne correspond à tes critères... Essaye encore</p>
      <span id="smiley">;)</span>
    </div>
  <% else %>
    <% @games.each do |game| %>
      <%= link_to game_path(game["id"]) do %>
      <div class="card-game">
        <img src="<%= game.picture %>">
        <div class="card-game-infos">
          <h2><%= game.name %></h2>
          <p><%= game.category %> - De <%= game.nb_player_min %> à <%= game.nb_player_max %> joueurs</p>
        </div>
      </div>
      <% end %>
    <% end %>
  <% end %>
</div>
