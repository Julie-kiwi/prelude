<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">


      <div class="title-align">
      <%= image_tag 'left-arrow.png', class: "left-arrow" %>
      <h2 class="title_sign_up">Bonjour !</h2>
      </div>

        <div class="btn_sign_up" id="btn_sign_up_facebook">
         <%= image_tag 'facebook_logo.png', class: "img_signin" %>
         <h3 id="btn_h3_facebook">Continuer avec Facebook</h3>
        </div>
        <div class="btn_sign_up btn_sign_up_main">
          <%= image_tag 'google_logo.png', class: "img_signin" %>
          <h3 id="btn_h3_google">Continuer avec Google</h3>
        </div>

        <div class="btn_sign_up btn_sign_up_main" id="btn-email">
          <h3 class="btn_h3">Continuer avec mon e-mail</h3>
        </div>

         <div class="form-login">
           <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs ">
              <%= f.input :email, required: false, autofocus: true, placeholder: "Email", label: "E-mail" %>

              <%= f.input :password, required: false, placeholder: "••••••", label: "Mot de passe" %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "CONNEXION", class: "btn btn_connexion" %>
            </div>
            <%= render "devise/shared/links" %>
          <% end %>
        </div>


      <!-- Insert form here -->
    </div>
  </div>
</div>

