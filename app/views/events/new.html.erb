

<h1>Event#new</h1>
<p>Find me in app/views/event/new.html.erb</p>

<%= simple_form_for @event do |f| %>
  <%= f.input :date %>
  <%= f.input :time %>
  <%= f.input :place, label: 'bar? ou chez toi?', as: :radio_buttons, collection: ["Chez moi", "Bar"] %>
  <div class="dropdown_address">
   <%= f.input :place, collection: ["#{@bars[0].name}: #{@bars[0].address}", "#{@bars[1].name}: #{@bars[1].address}", "#{@bars[2].name}: #{@bars[2].address}"] %>
  </div>


  <%= f.input :nb_person %>
  <%= f.submit "create" %>
<% end %>
