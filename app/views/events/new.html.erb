<link href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">



<div class="cont-event-search">
  <div class="cont-link">
    <%= link_to root_path do %>
      <%= image_tag 'left-arrow_white.png', class: "left-arrow" %>
    <% end %>
    <h1 class="title_sign_up">Créer une soirée jeux</h1>
  </div>
  <div class="container">
    <div class="row">
     <div class="col-md-6 col-md-offset-3">

        <div class="page-new">

         <div class="form-group">

        <%= simple_form_for @event do |f|%>
          <div>
          <%= f.input :date, as: :string, input_html:{class: "date-calendar", id:"event-btn"}, :placeholder => 'Date', label: false  %>


          </div>
        </div>

        <div class="form-group string required event_time">

          <input class="form-control string required time-calendar flatpickr-input active mainLoginInput" id="event-btn" placeholder="&#xf017; Date "; Heure" type="text" name="event[time]" readonly="readonly">
         <!--  <label class= "category-box" for="Ambiance"><i class="fas fa-cocktail"></i> Ambiance</label> -->
        </div>
        <%= f.input :time, as: :string , input_html:{class: "time-calendar", id:"event-btn"}, :placeholder => 'Heure', label: false  %>


        <div class="cont-places"> <%= f.input_field :place, as: :radio_buttons, class:'hidden', collection: ["Chez moi", "Bar"], input_html:{id:"event-btn"} %>
        </div>


        <div class="dropdown_address">
        <%= f.input :bar_id, collection: Bar.all.map {|b| ["#{b.name}: #{b.address}", b.id]}, input_html:{id:"event-btn"}, :placeholder => 'Invitez', label: false   %>
        </div>


        <%= f.input :invitation_emails, collection: User.pluck(:email), input_html:{class: "span8 ac-select2", id:"event-btn"},:prompt => 'Ajouter des joueurs', label: false %>

        <%= f.input :nb_person, input_html: { min: '0', step: 'any' }, input_html:{class: "form-control", id:"event-btn"}, placeholder: "Nombre de joueurs", label: false  %>

        <%= f.submit "Créer une soirée", class: "btn_all"%>

     <% end %>
     </div>
  </div>
   </div>
    </div>
</div>


