<div class="container">
  <div class="row">

    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
      <h1>EVENT SHOW</h1>
        <h4>Soirée Jeux de  <%= @event.creator.first_name %>
         <%= @event.creator.last_name %></h4>

       <p>Event date is <%= @event.date %></p>
       <p>Event time is <%= @event.time %></p>
       <p>Event place is in <%= @event.place %></p>
       <p>Number of participants <%= @event.nb_person %></p>
       </div>
      <div
         id="map"
         style="width: 100%;
         height: 600px;"
         data-markers="<%= @markers.to_json %>"
         data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>

      <div class="participants">
        <%= render 'shared/participants-avatar', current_participant: @participant, event: @event %>
      </div>

      <button class="btn btn-primary text-center">DEMARRER LA SOIRÉE</button>
      </div>
  </div>
</div>
