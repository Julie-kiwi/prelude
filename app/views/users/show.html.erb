<div class="profile_body">
  <div class="user_card">
    <div class="profile_image">
      <%= cl_image_tag(current_user.photo, alt: "profile_picture", id: "avatar_profile") %>
    </div>
    <div class="user_info">
      <div class="name">
        <%= @user.first_name %>
        <%= @user.last_name %>
      </div>
      <div class="address">
        <i class="fas fa-map-marker-alt">&nbsp;</i><%= @user.address %>
      </div>
      <div class="email">
        <i class="fas fa-at"></i>&nbsp;<%= @user.email %>
      </div>
      <div class="phone">
        <i class="fas fa-phone">&nbsp;</i><%= @user.phone_number %>
      </div>
    </div>
  </div>

  <h3>Mes soirées</h3>
  <% @user.creator_events.each do |event| %>
    <%= link_to "Soirée de #{event.creator.first_name} | #{event.date} | #{event.creator.address}", event_path(event) %>
  <% end %>

  <h3>Mes invitations</h3>
  <% @user.attendee_events.each do |event| %>
    <%= link_to "Soirée de #{event.creator.first_name} | #{event.date} | #{event.creator.address}", event_path(event) %>
  <% end %>

  <h3>Ma bibliothèque de jeux</h3>
  <% @user.games.each do |game| %>
    <p><%= game.name %></p>
  <% end %>

  <%= simple_form_for @library do |f| %>
    <%= f.input :game_id, collection: Game.order(:name), label: :"Liste de jeux" %>
    <%= f.submit "Ajouter un jeu", class: "btn btn-primary" %>
  <% end %>
</div>
